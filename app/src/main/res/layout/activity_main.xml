<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#222222"
        android:text="+"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btnEqual"
        app:layout_constraintTop_toBottomOf="@+id/btnSub"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#222222"
        android:text="X"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="0"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btnDot"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#222222"
        android:padding="10dp"
        android:text="="
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="."
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="2"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#474747"
        android:padding="5dp"
        android:text="3"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="4"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#474747"
        android:text="6"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="232dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="9"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="232dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="8"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="232dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="7"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#474747"
        android:padding="10dp"
        android:text="5"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/ediText"
        android:layout_width="358dp"
        android:layout_height="152dp"
        android:background="#000"
        android:gravity="right"
        android:text="0"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEmpty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btnDel"
        android:layout_width="364dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:background="#222222"
        android:padding="10dp"
        android:text="Del"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ediText"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="232dp"
        android:background="#222222"
        android:padding="10dp"
        android:text="/"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#222222"
        android:text="-"
        android:textColor="#FFF"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnMul"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>